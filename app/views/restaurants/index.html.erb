<div class="container">

  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">See all restaurants</h1>
    </div>
  </div>

  <% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.category %></h2>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <div class="card">
        <h3><%= restaurant.name %></h3>
        <%= restaurant.address %>
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>

</div>
